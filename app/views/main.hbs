<h1 style="text-align: center;"><i class="material-icons">local_dining</i> Eat-Da-Burger</h1>

<div class="divider"></div>
<div class="row">
      <div class="col s6"><h5 style="text-align: center;">Available Burgers</h5></div>
      <div class="col s6"><h5 style="text-align: center;">Devoured Burgers</h5></div>
</div>

<div class="row">
      <div class="col s6">
            <ul class="collection">
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgerlist available=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
     <div class="col s6">
           <ul class="collection">
            {{#each burgers}}
                {{#if devoured}}
                {{> burgerlist available=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
</div>
    


<div class="divider"></div>
<form class="col s12">

<div class="section">
    <div class="row">
        <div class="input-field col s3"> </div>
        <div class="input-field col s4">
            <h4>Add a burger</h4>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s3"> </div>
        <div class="input-field col s4">
            <input placeholder="burger name" id="name" type="text" class="validate">
        </div>
    </div>
    <div class="row">
        <div class="input-field col s3"></div>
        <div class="input-field col s4">
            <button class="btn waves-effect waves-light submit" type="button" id="submit_form">Add
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
</div>
</form>
